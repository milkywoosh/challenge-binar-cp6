<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
  document.getElementById("edit-user").addEventListener('click', function (e) {
    let username = document.getElementById('recipient-username').value
    let password = document.getElementById('recipient-password').value
    let userID = document.getElementById('recipient-userid').value
    axios.patch('/usergames/editUser', {
        userID: userID,
        username: username,
        password: password
    })
        .then(function (response) {
            console.log(response);
            window.location.href = '/'
        })
        .catch(function (error) {
            console.log(error);
        });
})
</script>